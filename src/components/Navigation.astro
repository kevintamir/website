---
import "../styles/Navigation.css";
import "../styles/global.css";
import "../scripts/Navigation.js";
import { Image } from 'astro:assets';
import icon from "../../public/ico.png";
---
<nav class="secondary-font">
    <div>
        <a href="/"><Image class="logo" src={icon} alt="Logo"/></a>
    </div>
    <div class="toggle-btn">
        <button class="burger" onclick="this.classList.toggle('active');"></button>
    </div>
</nav>

<div class="overlay default-font">
    <div class="overlay-menu">
        <div class="menu-item">
            <p><a href="/about">About</a></p>
        </div>
        <div class="menu-item">
            <p><a href="/projects">Projects</a></p>
        </div>
        <div class="menu-item">
            <p><a href="#">Blogs</a></p>
        </div>
    </div>
    <div class="sub-nav">
        <p><a href="https://github.com/kevintamir/" target="_blank">GitHub</a></p>
        <p>•</p>
        <p><a href="https://linkedin.com/in/kevintamir/" target="_blank">LinkedIn</a></p>
        <p>•</p>
        <p><a href="https://x.com/kvntmr" target="_blank">Twitter</a></p>
    </div>
</div>

<script src="https://unpkg.com/gsap@3/dist/CSSRulePlugin.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const toggleButton = document.querySelector(".burger");
        const overlay = document.querySelector(".overlay");
        let isOpen = false;
        toggleButton?.addEventListener("click", function() {
            if (toggleButton?.classList.contains("active")) {
                (overlay as HTMLElement).style.opacity = "90%";
                // (overlay as HTMLElement).style.zIndex = "1";
                (overlay as HTMLElement).style.top = "0";
            } else {
                (overlay as HTMLElement).style.opacity = "0%";
                // (overlay as HTMLElement).style.zIndex = "-99";
                (overlay as HTMLElement).style.top = "-100%";
            }
        });
    });
</script>